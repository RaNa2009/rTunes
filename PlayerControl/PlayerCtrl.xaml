<UserControl x:Class="PlayerControl.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayerControl"
             mc:Ignorable="d" 
             d:DesignHeight="55" d:DesignWidth="300">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FFE4D8D8" Offset="0.4"/>
                <GradientStop Color="#FFBD2D2D" Offset="0.723"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="button" Content="Play" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
        <ProgressBar HorizontalAlignment="Left" Height="20" Margin="90,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="90,30,0,0" VerticalAlignment="Top" Width="200" Height="22" FontSize="10"/>
    </Grid>
</UserControl>
