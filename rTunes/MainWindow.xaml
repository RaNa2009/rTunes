<Window x:Class="rTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:rTunes"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="btnPrev" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="75" Click="btnPrev_Click"/>
        <Button x:Name="btnPlayPause" Content="Play" HorizontalAlignment="Left" Margin="90,67,0,0" VerticalAlignment="Top" Width="75" Click="btnPlayPause_Click"/>
        <Button x:Name="btnNext" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="170,67,0,0" VerticalAlignment="Top" Width="75" Click="btnNext_Click"/>
        <Label x:Name="lblTrack" Content="" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Width="235" BorderThickness="1" Background="#FFF7F7F7" FontWeight="Bold"/>
        <TextBox x:Name="tbLyrics" HorizontalAlignment="Left" Height="242" Margin="250,67,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="257" TextAlignment="Center"/>

    </Grid>
</Window>
